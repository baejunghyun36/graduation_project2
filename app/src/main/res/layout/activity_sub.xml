        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="hi"
        />


    <TextView
        android:id="@+id/test2"
